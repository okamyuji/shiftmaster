#!/usr/bin/env bash
# pre-commit hook - コミット前にlintとテストを実行
# このフックはgit commitの前に実行されます

# プロジェクトルートへ移動
cd "$(git rev-parse --show-toplevel)"

# check-all.sh を実行
if [ -x "./scripts/check-all.sh" ]; then
    ./scripts/check-all.sh
    exit $?
else
    echo "Error: scripts/check-all.sh が見つかりません"
    exit 1
fi

